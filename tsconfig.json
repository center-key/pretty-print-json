{
   "compilerOptions": {
      "target": "ES2021",
      "module": "ES2020",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "build",
      "newLine": "lf",
      "strict": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "exactOptionalPropertyTypes": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUncheckedIndexedAccess": true,
      "noUnusedLocals": true,
      "removeComments": true
   }
}
